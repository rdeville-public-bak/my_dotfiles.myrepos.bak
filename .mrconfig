[DEFAULT]
lib =
  . ${HOME}/.config/mr/load_library.sh

post_checkout = bootstrap_dotfiles
register      = mr_register
update        = mr_update $@
push          = mr_push $@
status        = mr_status $@
remote        = mr_remote $@
branch        = mr_branch $@

# Teach mr how to `mr gc` in git repos.
git_gc = git gc "$@"

include =
  # Load method to include repo per hostname
  . ${HOME}/.config/mr/load_library.sh
  # Load repos per hostname
  include_host_repo
